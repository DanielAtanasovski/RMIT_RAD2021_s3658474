<header class="top-image">
  <div class="container">
    <div class="text-center padding-top-s">
      <h3>
        <%=@random_header.name %>

        <!--Check if already saved-->
        <% if @saved_list_cookies_array != nil && @saved_list_cookies_array.include?(@random_header.id) %>
          <%= link_to "javascript:removeFromCookies(#{@random_header.id})", class: 'btn btn-default' do %>
            <span class="glyphicon glyphicon-minus" aria-hidden="true"></span>
          <% end %>
        <% else %>
          <%= link_to "javascript:addToCookies(#{@random_header.id})", class: 'btn btn-default' do %>
            <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
          <% end %>
        <% end %>

      </h3>
      <div class="panel panel-primary header-img">
        <div class="panel-body">
          <img class="img-responsive" src="<%=@random_header.images[0].url %>">
        </div>
      </div>
      <h3><%=@random_header.price %></h3>
    </div>
  </div>
</header>

