<!--Saved List-->
<% if (@saved_list_cookies && JSON.parse(@saved_list_cookies).length > 0) %>
  <section class="col-md-12">
    <div class="container">

      <div class="row padding-bottom-s">
        <h2 class="col-xs-9 section-header">Saved List</h2>
      </div>
        <!--Items-->
      <div class="row">
        <% JSON.parse(@saved_list_cookies).each do |saved_item| %>
        <% @saved_item_record = Item.find(saved_item) %>
        <div class="col-md-3">
          <div class="panel panel-primary shadow-sm">
            <img class="img-responsive" src="<%= @saved_item_record.images[0].url %>" />
            <div class="panel-footer">
              <p><%= @saved_item_record.name %></p>
              <p>
                <%= @saved_item_record.price %>
                <!--Check if already saved-->
                <% if @saved_list_cookies_array && @saved_list_cookies_array.include?(@saved_item_record.id) %>
                  <%= link_to "javascript:removeFromCookies(#{@saved_item_record.id})", class: 'btn btn-default pull-right' do %>
                    <span class="glyphicon glyphicon-minus" aria-hidden="true"></span>
                  <% end %>
                <% else %>
                  <%= link_to "javascript:addToCookies(#{@saved_item_record.id})", class: 'btn btn-default pull-right' do %>
                    <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
                  <% end %>
                <% end %>
              </p>
            </div>
          </div>
        </div>
        <% end %>
      </div>

    </div>
  </section>
<% end %>

